### BEGIN INIT INFO
# Provides:             iotclnt
# Required-Start:
# Required-Stop:
# Default-Start:        2 3 4 5
# Default-Stop:         0 1 6
# Short-Description:    IoT Client Node App
### END INIT INFO

export PATH=$PATH:/usr/local/bin/node
export NODE_PATH=$NODE_PATH:/usr/local/lib/node_modules
export HOME=/home/pi/iotclnt

case "$1" in
  start)
    /usr/local/bin/forever -p /home/pi/iotclnt/.forever --sourceDir=/home/pi/iotclnt --workingDir=/home/pi/iotclnt --minUptime 5000 --spinSleepTime 2000 start client.js
    ;;
  stop)
    exec /usr/local/bin/forever stopall
    ;;
  *)

  echo "Usage: /etc/init.d/iotclnt {start|stop}"
  exit 1
  ;;
esac
exit 0
